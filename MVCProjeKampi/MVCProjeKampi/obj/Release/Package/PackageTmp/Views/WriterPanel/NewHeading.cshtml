@model EntityLayer.Concrate.Heading

@{
    ViewBag.Title = "NewHeading";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<h3>@ViewBag.d maili ile giriş yaptık(viewbag)</h3>
<br />
<h2>Yeni Başlık Ekleme</h2>
<br />
@using (Html.BeginForm("NewHeading", "WriterPanel", FormMethod.Post))
{
    <div class="form form-group">
        @Html.Label("Başık Adı")
        @Html.TextBoxFor(x => x.HeadingName, new { @class = "form-control" })
        @Html.ValidationMessageFor(x => x.HeadingName)
        <br />
        
        @Html.Label("Kategori")
        @*dropdown list oluşturma*@
        @Html.DropDownListFor(x => x.CategoryID, (List<SelectListItem>)ViewBag.vlc, new
            { @class = "form-control" })
        <br />
        <button class="btn btn-info">Başlık Oluştur</button>
    </div>
}

